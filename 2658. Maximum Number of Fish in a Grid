2658. Maximum Number of Fish in a Grid
My attempt()
int dfs(int **grid, const int rowNum, const int colNum, int iRow, int iCol) {
  if (grid[iRow][iCol] == 0)
    return 0;
  int rs = grid[iRow][iCol];
  grid[iRow][iCol] = 0;
  if (iRow > 0)
    rs += dfs(grid, rowNum, colNum, iRow - 1, iCol);
  if (iRow < rowNum - 1)
    rs += dfs(grid, rowNum, colNum, iRow + 1, iCol);
  if (iCol > 0)
    rs += dfs(grid, rowNum, colNum, iRow, iCol - 1);
  if (iCol < colNum - 1)
    rs += dfs(grid, rowNum, colNum, iRow, iCol + 1);
  return rs;
}
int findMaxFish(int **grid, int gridSize, int *gridColSize) {
  int max = 0, tmp;
  for (int i = 0; i < gridSize; i++) {
    for (int j = 0; j < *gridColSize; j++) {
      tmp = dfs(grid, gridSize, *gridColSize, i, j);
      if (tmp > max)
        max = tmp;
    }
  }
  return max;
}

Code sample ()
int factoryFish(int r, int c, int** g, int gS, int gCS){
    if (r<0 || c<0 || r>=gS || c>=gCS || !g[r][c]) return 0;
    int fish=g[r][c];
    g[r][c]=0;
    return fish+factoryFish(r-1,c,g,gS,gCS)+factoryFish(r+1,c,g,gS,gCS)+factoryFish(r,c-1,g,gS,gCS)+factoryFish(r,c+1,g,gS,gCS);
}
int findMaxFish(int** grid, int gridSize, int* gridColSize) {
    int output=0;
    for (int r=0;r<gridSize;r++){
        for (int c=0;c<*gridColSize;c++){
            int fish=factoryFish(r,c,grid,gridSize,*gridColSize);
            output=(fish>output?fish:output);
        }
    }
    return output;
}
